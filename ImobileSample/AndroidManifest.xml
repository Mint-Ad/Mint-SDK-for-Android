<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="imobile.androidsample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="imobile.androidsample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="imobile.androidsample.InlineAdActivity"
            android:label="@string/title_activity_detail" >
        </activity>

        <activity
            android:name="imobile.androidsample.FullScreenAdActivity"
            android:label="@string/title_activity_detail_activity2" >
        </activity>

         <activity
            android:name="imobile.androidsample.ListViewActivitity"
            android:label="@string/title_activity_listview" >
        </activity>

         <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        <meta-data android:name="i-mobile_DebugLogging" android:value="true" />
        <meta-data android:name="i-mobile_Testing" android:value="false" />
    </application>

</manifest>
